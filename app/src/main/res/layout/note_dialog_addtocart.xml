<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.radugunn.app.customview.textview.TextViewLight
        android:id="@+id/tvaddNoteText"
        style="@style/txt_gray_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Note"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_10sdp" />

    <com.radugunn.app.customview.edittext.EditTextRegular
        android:id="@+id/etnotedialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/note_dialog_addtocart"
        android:padding="@dimen/_10sdp"
        android:hint="Enter Note"
        style="@style/txt_gray_medium"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.radugunn.app.customview.textview.TextViewRegular
            android:id="@+id/tvCancel"
            style="@style/txt_gray_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/value_6"
            android:text="@string/cancel" />

        <com.radugunn.app.customview.textview.TextViewRegular
            android:id="@+id/tvDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/value_5"
            android:text="Done" />
    </LinearLayout>
</LinearLayout>